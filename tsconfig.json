{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2022",
    "outDir": "build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["src/*.ts", "types/*.d.ts", "global.ts"]
}
